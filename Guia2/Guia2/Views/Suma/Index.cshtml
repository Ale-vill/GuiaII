
@{
    ViewData["Title"] = "Suma";
}

    <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-3">
            <h1 class="text-center">Suma</h1>
            <form action="/suma/index" method="post">

                <h2 class="text-center">Resulta: @ViewData["result"]</h2>
                <br />
                <label>Ingrese el numero A</label>
                <input class="form-control"  type="number" name="x" value="" required/>
                <br />
                <label>Ingrese el numero B</label>
                <input class="form-control"  type="number" name="y" value="" required/>
                <br />
                <input class="text-center btn btn-danger" type="submit" name="name" value="Sumar" />
                <br />

            </form>
        </div>
    </div>

