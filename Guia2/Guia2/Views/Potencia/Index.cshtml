
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2 class="text-center">Potencia</h2>
        <form action="/potencia/index" method="post">

            <h5 class="text-center">Resulta: @ViewData["resultado"]</h5>
            <br />
            <label>Ingrese el numero</label>
            <input class="form-control" type="number" name="numero" step="any" value="" required />
            <br />
            <label>Ingrese la potencia</label>
            <input class="form-control" type="number" name="potencia" value="" required />
            <br />
            <input class="text-center btn badge-dark" type="submit" name="name" value="Calcular" />
            <br />

        </form>
    </div>
</div>

